# https://editorconfig.org/

# top-most EditorConfig file
root = true

# Tab indentation (no size specified)
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Yaml rules
[*.yml]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# JS, JSON
[*.{js,json}]
indent_size = 2

# CSS
[*.{css,scss}]
indent_size = 2

# HTML and Twig
[*.{html,htm,twig,nunj}]
indent_size = 2

[*.svg]
indent_size = 2
